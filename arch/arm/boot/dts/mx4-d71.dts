/dts-v1/;
#include "mx4-d71.dtsi"
#include <dt-bindings/input/input.h>

/ {
	model = "Toradex Colibri iMX7D 1GB Host Mobility MX-4 V71 board";
	compatible = "toradex,colibri_imx7d_emmc-eval", "toradex,colibri_imx7d_emmc", \
		     "fsl,imx7d";

	chosen {
		bootargs = "console=ttyLP0,115200";
	};

	clk24m: clk24m {
		compatible = "fixed-clock";
		#clock-cells = <0>;
		clock-frequency = <24000000>;
	};

	regulators {
		compatible = "simple-bus";
		#address-cells = <1>;
		#size-cells = <0>;

		sys_5v0_reg: regulator@0 {
			compatible = "regulator-fixed";
			reg = <0>;
			regulator-name = "5v0";
			regulator-min-microvolt = <5000000>;
			regulator-max-microvolt = <5000000>;
			regulator-always-on;
		};

		/* USBH_PEN */
		usbh_vbus_reg: regulator@1 {
			compatible = "regulator-fixed";
			pinctrl-names = "default";
			pinctrl-0 = <&pinctrl_usbh1_reg>;
			reg = <1>;
			gpio = <&gpio2 19 0>;
			enable-active-high;
			regulator-name = "usbh_vbus";
			regulator-min-microvolt = <5000000>;
			regulator-max-microvolt = <5000000>;
			vin-supply = <&sys_5v0_reg>;

			regulator-state-mem {
				regulator-on-in-suspend;
			};
		};
	};

	gpio-keys {
		compatible = "gpio-keys";
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_gpiokeys>;

		power {
			label = "power off";
			gpios = <&gpio2 24 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_POWER>;
			debounce-interval = <10>;
		};
	};
};

&dspi0 {
	status = "okay";

	mcp2515can: can@1 {
		compatible = "microchip,mcp2515";
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_can_int>;
		reg = <1>;
		clocks = <&clk24m>;
		spi-max-frequency = <10000000>;
		interrupt-parent = <&gpio1>;
		interrupts = <2 GPIO_ACTIVE_LOW>;
	};
};

&dspi1 {
	status = "okay";

    mx4_io_spi: dspi@0 {
       	compatible = "mx4_io_spi";
       	reg = <0>;
       	spi-max-frequency = <8000000>;
       	pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_mx4_io_int>;
		interrupt-parent = <&gpio0>;
       	interrupts = <20 IRQ_TYPE_EDGE_RISING>;
       	gpios = <&gpio1 9 IRQ_TYPE_EDGE_RISING>;
       	spi-cpha;
   };

    mx4_pic: dspi@1 {
        compatible = "host,mx4_pic";
        reg = <1>;
        spi-max-frequency = <50000000>;
    };
};

&i2c2 {
	status = "okay";

    acc: mma8452q@1c {
    	compatible = "fsl,mma8452";
    	reg = <0x1c>;
    	pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_acc>;
        interrupt-parent = <&gpio1>;
        interrupts = <31 IRQ_TYPE_EDGE_FALLING>;
    };
};


&esdhc1 {
	status = "okay";
};

&fec1 {
	phy-mode = "rmii";
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_fec1>;
	status = "okay";
};

&uart0 {
	status = "okay";
};

&uart1 {
	status = "okay";
};

&uart2 {
	status = "okay";
};

&usbh1 {
	vbus-supply = <&usbh_vbus_reg>;
};

 &iomuxc {
 	imx7-colibri {
		 /*Input voltage low sodim 133*/
 		pinctrl_gpiokeys: gpiokeys {
 			fsl,pins = <
				MX7D_PAD_EPDC_GDRL__GPIO2_IO26 0x0001
			>;
 		};
		 /*mcp2515 int sodim 27*/
		pinctrl_can_int: can_int {
			fsl,pins = <
				MX7D_PAD_SAI2_TX_BCLK__GPIO6_IO20 0x22ed
			>;
		};
		/*acc-int sodim 106*/
        pinctrl_acc: acc_int1 {
            fsl,pins = <
                MX7D_PAD_EPDC_BDR0__GPIO2_IO28 0x219d
            >;
      	};
		/*pic spi sodim 37 and 45(wake up cpu)*/
		pinctrl_mx4_io_int: mx4_io_int {
            fsl,pins = <
                MX7D_PAD_LPSR_GPIO1_IO06__GPIO1_IO6	0x0009
                MX7D_PAD_LPSR_GPIO1_IO01__GPIO1_IO1	0x0009
            >;
        };
 	};
};

&usbotg2 {
	vbus-supply = <&reg_usbh_vbus>;
	status = "okay";
};